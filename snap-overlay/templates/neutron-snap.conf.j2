[DEFAULT]
# Set state path to writable directory
state_path = {{ snap_common }}/lib
# Log to systemd journal
use_journal = True

{% if dns_domain %}
dns_domain = {{ dns_domain }}
{% endif %}

[oslo_concurrency]
# Oslo Concurrency lock path
lock_path = {{ snap_common }}/lock

[ovn]
{% if dns_servers %}
dns_servers= {{ dns_servers }}
{% endif %}

